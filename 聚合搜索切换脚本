    `);

    if(isSearchEngine()){
        /* å­˜å‚¨åˆå§‹åŒ– */

        console.log("ã€æç¤ºã€‘åŒ¹é…åˆ°å·²ä¿å­˜çš„æœç´ å¼•æ“");
        try{
            initEle();
        }catch(e){
            console.log(e)
        }

        setTimeout(() => {
            if($("#userscript-quickSearchBar").length == 0){
                /* å¦‚æœåœ¨é¡µé¢åŠ è½½æ—¶æœªå®Œæˆåˆå§‹åŒ– */
                initEle();
            }
